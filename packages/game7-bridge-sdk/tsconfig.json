{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["ES6", "DOM"],
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "removeComments": false,
    "strictPropertyInitialization": false,
    "types": []
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/*", "dist", "src/scripts"]}
